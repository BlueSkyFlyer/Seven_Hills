.container
  .row
    .col-sm-4.col-sm-offset-1
      = bootstrap_form_for @group do |f|
        %h3 Create a Group
        %fieldset
          = f.select(:instruction, Group::INSTRUCTION_TYPES)
          = f.text_field :size
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            %input(type="submit" value="Create Group" class="btn btn-primary")
