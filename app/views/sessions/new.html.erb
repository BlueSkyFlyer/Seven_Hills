<div class="container">
  <h4>Login</h4>

  <div class="well">
    <%= form_tag '/login' do %>
    <div class='form-group'>
    	<%= label_tag :email %>
    	<%= email_field_tag :email, params[:email] || '', class: "form-control", placeholder: "email@example.com" %>
    </div>
    <div class='form-group'>
    	<%= label_tag :password %>
    	<%= password_field_tag :password, params[:password] || '', class: "form-control", placeholder: "password" %>
    </div>
    <%= submit_tag "Login", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>