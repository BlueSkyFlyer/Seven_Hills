<div class='well'>
  <%= form_for @post do |f| %>
    <%= render 'shared/errors', obj: @post %>
      <div class='form-group'>
      	<%= f.label :title, class: "lead" %>
      	<%= f.text_field :title, class: "form-control", placeholder: "Post Title" %>
      </div>
      <div class='form-group'>
      	<%= f.label :body, class: "lead" %>
      	<%= f.text_area :body, class: "form-control", rows: "3", placeholder: "Enter the body of the post here" %>
      </div>
      <%= f.submit(@post.new_record? ? "Create Post" : "Update Post", class: 'btn btn-primary') %>
  <% end %>
</div>
