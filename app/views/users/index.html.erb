<div class="container">

<div>
	<ul class="list-inline">
		<li>
			<%= link_to(new_post_path, class: "btn btn-success") do %>
			  New Post
			<% end %>
		</li>
		<li>
			<%= link_to(new_shift_path, class: "btn btn-success") do %>
			  Sign up for a shift
			<% end %>
		</li>
		<li>
			<%= link_to(shifts_path, class: "btn btn-success") do %>
			  View Shift Calendar
			<% end %>
		</li>
	</ul>
</div>

<% @posts.each do |post| %>
	<div class="well">
		<ul class="list-inline">
		  <li><h3><%= post.title %></h3></li>
		  <li>(<%= post.creator.first_name %>)</li>
	  </ul>
	  <p><%= post.body %></p>
	</div>
<% end %>

<% @shifts.each do |shift| %>
  <div class="well">
  	<ul>
  		<li><%= shift.creator.first_name %></li>
  		<li><%= shift.date %></li>
  		<li><%= shift.start_time %></li>
  		<li><%= shift.end_time %></li>
  	</ul>
  </div>
<% end %>

</div>