.container
  .row
    .col-sm-10.col-sm-offset-1
      %h3 Your #{@reservation.instruction} Reservation
      %h4.green Group ID: #{@reservation.id}
      = link_to "Add a Skydiver", new_student_path(reservation_id: @reservation.id), class: "btn btn-primary"
      %table.table
        %thead
          %tr
            %th First Name
            %th Last Name
            %th Email
            %th Date
            %th Time
        %tbody
          - @reservation.students.each do |student|
            %tr
              %td= student.first_name
              %td= student.last_name
              %td= student.email
              %td= student.opening.nil? ? "#{student.first_name} has not picked a day to skydive!" : display_day(student.opening.date)
              %td= student.opening.nil? ? "#{student.first_name} has not picked a time to skydive!" : display_time(student.opening.time)